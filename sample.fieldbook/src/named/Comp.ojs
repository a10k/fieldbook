props => {
  const { stylestring, classstring, onClick, children } = props;
  const [stateStyleID, setStateStyleID] = Preact.useState(DOM.uid());

  return Preact.html`<div onClick=${onClick} className=${classstring} id=${
    stateStyleID.id
  }>
        <style>${(stylestring || '').replace(
          /\:scope/g,
          '#' + stateStyleID.id
        )}</style>
        ${children}
      </div>`;
}